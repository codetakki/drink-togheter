{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend (Debug)",
      "type": "npm",
      "script": "start:debug",
      "path": "backend",
      "isBackground": true,
      "presentation": {
        "group": "build",
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "owner": "custom-nest",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Nest application...",
          "endsPattern": "Nest application successfully started"
        }
      }
    },
    {
      "label": "Start Frontend (Vite)",
      "type": "npm",
      "script": "dev",
      "path": "client",
      "isBackground": true,
      "presentation": {
        "group": "build",
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "owner": "custom-vite",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "Local:"
        }
      }
    }
  ]
}